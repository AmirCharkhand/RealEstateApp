<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:RealEstateApp.ViewModels"
             xmlns:models="clr-namespace:RealEstateApp.Models"
             x:Class="RealEstateApp.Views.PropertyDetailsPage"
             x:DataType="viewModels:PropertyDetailsViewModel"
             Shell.PresentationMode="ModalAnimated">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image Grid.Row="0"
               VerticalOptions="Start"
               Aspect="Fill"
               HeightRequest="280"
               Grid.RowSpan="3" 
               Source="{Binding Property.ImageUrl}"/>
        <Grid Grid.Row="1"
              ColumnDefinitions="auto,*,auto"
              Margin="20,0,20,0">
            <ImageButton Grid.Column="0"
                         Source="back_icon"
                         CornerRadius="10"
                         BackgroundColor="White"
                         Opacity="0.8"
                         HeightRequest="40"
                         WidthRequest="40"
                         Padding="5"
                         VerticalOptions="Start"
                         Command="{Binding GoBackCommand}"/>

            <ImageButton Grid.Column="2"
                         CornerRadius="10"
                         BackgroundColor="White"
                         Opacity="0.8"
                         HeightRequest="40"
                         WidthRequest="40"
                         Padding="8"
                         VerticalOptions="Start"
                         Source="{Binding BookmarkIcon}"
                         Command="{Binding ToggleBookmarkCommand}"/>
        </Grid>
        <VerticalStackLayout Grid.Row="3"
                             Margin="20">
            <Label  FontSize="Large"
                    FontAttributes="Bold" 
                    Text="{Binding Property.Price, StringFormat='{0}$'}"/>
            <HorizontalStackLayout  Spacing="5">
                <Image HeightRequest="20"
                       VerticalOptions="Center"
                       Source="location_icon" />
                <Label TextColor="#848484"
                       VerticalOptions="Start"
                       WidthRequest="360"
                       FontSize="Subtitle" 
                       Text="{Binding Property.Address}"/>
            </HorizontalStackLayout>
            <Label Text="Description"
                   Margin="0,20,0,10"
                   FontSize="Large"
                   FontAttributes="Bold" />
            <Label FontSize="Subtitle"
                   TextColor="#848484" 
                   Text="{Binding Property.Description}"/>
        </VerticalStackLayout>
        <HorizontalStackLayout Grid.Row="4"
                               Margin="0,0,0,10"
                               Spacing="30"
                               HorizontalOptions="Center">
            <Button HeightRequest="60"
                    WidthRequest="150"
                    CornerRadius="35"
                    BackgroundColor="#2A5F73"
                    ImageSource="message_icon.png"
                    FontSize="Medium"
                    Text="Message"/>
            <Button HeightRequest="60"
                    WidthRequest="150"
                    CornerRadius="35"
                    BackgroundColor="#2A5F73"
                    ImageSource="phone_icon.png"
                    FontSize="Medium"
                    Text="Call"/>

        </HorizontalStackLayout>
    </Grid>

</ContentPage>