<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:RealEstateApp.ViewModels"
             xmlns:models="clr-namespace:RealEstateApp.Models"
             x:Class="RealEstateApp.Views.HomePage"
             x:DataType="viewModel:HomePageViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Margin="20"
                             Spacing="20">
            <VerticalStackLayout Spacing="5">
                <Label FontSize="Large"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Start"
                       Text="{Binding Username}"/>
                <Label Text="Find your dream home today!"
                       FontSize="Large"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Start" />
            </VerticalStackLayout>

            <SearchBar BackgroundColor="GhostWhite"/>

            <VerticalStackLayout Spacing="5">
                <Label Text="Categories"
                       FontSize="Large"
                       FontAttributes="Bold"/>
                <CollectionView HeightRequest="50"
                                SelectionMode="Single"
                                ItemsSource="{Binding Categories}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="20"
                                           Orientation="Horizontal"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Category">
                            <Border Padding="10"
                                    BackgroundColor="#ECECEC"
                                    Stroke="Transparent">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>
                                <HorizontalStackLayout Spacing="5">
                                    <Image Aspect="AspectFit"
                                           HeightRequest="30"
                                           WidthRequest="30"
                                           Source="{Binding ImageUrl}"/>
                                    <Label VerticalOptions="Center"
                                           FontSize="Medium"
                                           TextColor="#555555" 
                                           Text="{Binding Name}"/>
                                </HorizontalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="5">
                <Label Text="Top Picks"
                       FontSize="Large"
                       FontAttributes="Bold"/>
                <CollectionView HeightRequest="320"
                                SelectionMode="Single"
                                ItemsSource="{Binding TrendingProperties}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal"
                                           ItemSpacing="20"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Property">
                            <Border Padding="15"
                                    BackgroundColor="White"
                                    Stroke="#FFFFFF">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="25" />
                                </Border.StrokeShape>
                                <Grid RowSpacing="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0"
                                            HeightRequest="200"
                                            WidthRequest="250"
                                            Padding="0"
                                            Stroke="Transparent">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="25" />
                                        </Border.StrokeShape>
                                        <Image Aspect="Fill" 
                                               Source="{Binding ImageUrl}"/>
                                    </Border>
                                    <Label Grid.Row="1"
                                           FontSize="Medium"
                                           FontAttributes="Bold" 
                                           Text="{Binding Name}"/>
                                    <Label Grid.Row="2"
                                           FontSize="Small"
                                           TextColor="#848484"
                                           WidthRequest="250"
                                           LineBreakMode="TailTruncation" 
                                           Text="{Binding Address}"/>
                                    <Label Grid.Row="3"
                                           FontSize="Medium"
                                           FontAttributes="Bold"
                                           TextColor="Black" 
                                           Text="{Binding Price,StringFormat='${0}'}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>